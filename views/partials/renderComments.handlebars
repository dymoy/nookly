{{#each this}}
<div class="card">
    <div class="card-header d-flex flex-direction-row justify-content-between">
        <div class="comment-info my-auto">
            Commented by {{user.username}} on {{format_date created_date}}
        </div>
    </div>
    <div class="card-body d-flex flex-direction-row justify-content-between">
        <div class="comment-content my-auto">
             {{content}}
        </div>
    </div>
</div>
{{/each}}
